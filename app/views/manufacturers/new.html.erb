<h1> Manufacturers / New </h1>

<%= form_for @man_u do |f| %>
	<div>
		<%= f.label :name %>
		<%= f.text_field :name %>
	</div>
	<p></p>
	<div>
		<%= f.label :country %>
		<%= f.text_field :country  %>
	</div>
	<div>
	<%= f.submit "submit" %>
	<% end %>

	<% if @man_u.errors.any? %>
  	<div id="error_explanation">
    <h2><%= pluralize(@man_u.errors.count, "error") %> SO SRY:</h2>
  	
  	<ul>
  	<% @man_u.errors.full_messages.each do |msg| %>
  		<li><%= msg %></li>
  	<% end %>
  	</ul>
  	</div>

  <% end %>

  